{
  "manifest_version": 3,
  "name": "Wishlist Extension",
  "version": "1.0",
  "description": "Add items to your wishlist from any website",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://wish.test/*",
    "https://wish.test/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Add to Wishlist"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}